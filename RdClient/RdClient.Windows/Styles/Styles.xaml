        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="ConnectionCenterBarBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="ConnectionCenterScrollViewBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />
            
            <SolidColorBrush x:Key="ConnectionCenterDesktopPlaceholderIconColor" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="ConnectionCenterHostnameBackgroundColor" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="ConnectionCenterBarButtonLightNormalForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}"/>
            <SolidColorBrush x:Key="ConnectionCenterBarButtonLightPressedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}"/>

            <SolidColorBrush x:Key="ConnectionBarButtonBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonDisabledBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonDisabledForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPointerOverBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPointerOverForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPressedBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPressedForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />

            <SolidColorBrush x:Key="PointerOverBackgroundBrush" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="PointerOverForegroundBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="PressedBackgroundBrush" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="PressedForegroundBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="PressedBorderBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="SelectedForegroundBrush" Color="{ThemeResource SystemColorHighlightTextColor}" />
            <SolidColorBrush x:Key="SelectedBorderBrush" Color="{ThemeResource SystemColorHighlightColor}" />
            <SolidColorBrush x:Key="UnselectedBackgroundBrush" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="UnselectedForegroundBrush" Color="{ThemeResource SystemColorButtonTextColor}" />
            <SolidColorBrush x:Key="UnselectedBorderBrush" Color="{ThemeResource SystemColorButtonTextColor}" />

            <x:Double x:Key="ConnectionOverlayOpacity">1.0</x:Double>

            <SolidColorBrush x:Key="DialogBackgroundColor" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="AccentedButtonBackgroundColor" Color="{ThemeResource SystemColorButtonFaceColor}" />
            <SolidColorBrush x:Key="ModalBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}" />

