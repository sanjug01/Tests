            <SolidColorBrush x:Key="SelectedForegroundBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="SelectedBorderBrush" Color="Transparent" />
            <SolidColorBrush x:Key="UnselectedBackgroundBrush" Color="Transparent" />
            <SolidColorBrush x:Key="UnselectedForegroundBrush" Color="{ThemeResource SystemBaseMediumLowColor}" />
            <SolidColorBrush x:Key="UnselectedBorderBrush" Color="Transparent" />

            <x:Double x:Key="ConnectionOverlayOpacity">0.8</x:Double>

            <SolidColorBrush x:Key="DialogBackgroundColor" Color="{ThemeResource SystemAltHighColor}" />
            <SolidColorBrush x:Key="AccentedButtonBackgroundColor" Color="{ThemeResource SystemAccentColor}" />
            <SolidColorBrush x:Key="ModalBackgroundBrush" Color="{ThemeResource SystemChromeBlackMediumLowColor}" />
                        
            <SolidColorBrush x:Key="rdErrorBrush" Color="Red" />
        </ResourceDictionary>        
        <ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="ConnectionCenterBarBackgroundBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionCenterScrollViewBackgroundBrush" Color="{ThemeResource SystemAltHighColor}" />

            <SolidColorBrush x:Key="ConnectionCenterDesktopPlaceholderIconColor" Color="{ThemeResource SystemChromeHighColor}" />
			<SolidColorBrush x:Key="ConnectionCenterHostnameBackgroundColor" Color="{ThemeResource SystemAltMediumColor}" />
            <SolidColorBrush x:Key="ConnectionCenterBarButtonLightNormalForegroundBrush" Color="{ThemeResource SystemBaseHighColor}"/>
            <SolidColorBrush x:Key="ConnectionCenterBarButtonLightPressedForegroundBrush" Color="{ThemeResource SystemBaseHighColor}"/>

            <SolidColorBrush x:Key="ConnectionBarButtonBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonDisabledBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonDisabledForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPointerOverBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPointerOverForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPressedBackgroundThemeBrush" Color="{ThemeResource SystemChromeMediumColor}" />
            <SolidColorBrush x:Key="ConnectionBarButtonPressedForegroundThemeBrush" Color="{ThemeResource SystemBaseHighColor}" />

            <SolidColorBrush x:Key="PointerOverBackgroundBrush" Color="{ThemeResource SystemControlForegroundBaseHighBrush}" />
            <SolidColorBrush x:Key="PointerOverForegroundBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="PressedBackgroundBrush" Color="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            <SolidColorBrush x:Key="PressedForegroundBrush" Color="{ThemeResource SystemChromeHighColor}" />
            <SolidColorBrush x:Key="PressedBorderBrush" Color="{ThemeResource ListBoxBorderThemeBrush}" />
            <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SelectedForegroundBrush" Color="{ThemeResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="SelectedBorderBrush" Color="Transparent" />
            <SolidColorBrush x:Key="UnselectedBackgroundBrush" Color="Transparent" />
            <SolidColorBrush x:Key="UnselectedForegroundBrush" Color="{ThemeResource SystemBaseMediumLowColor}" />
            <SolidColorBrush x:Key="UnselectedBorderBrush" Color="Transparent" />

            <x:Double x:Key="ConnectionOverlayOpacity">0.6</x:Double>

            <SolidColorBrush x:Key="DialogBackgroundColor" Color="{ThemeResource SystemAltHighColor}" />
            <SolidColorBrush x:Key="AccentedButtonBackgroundColor" Color="{ThemeResource SystemAccentColor}" />
