        <Setter Property="Height" Value="{StaticResource SettingsItemHeightDouble}" />
        <Setter Property="Background" Value="{ThemeResource SettingsNavBarBackgroundBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource SettingsBackgroundBrush}" />
