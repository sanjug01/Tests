<Page
    x:Class="RdClient.Views.AddOrEditDesktopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:vm="using:RdClient.Shared.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:RdClient.Converters"    
    xmlns:helpers="using:RdClient.Shared.Helpers"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    
    <Page.DataContext>
        <vm:AddOrEditDesktopViewModel />
    </Page.DataContext>
    
    <Page.Resources>
        <c:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <c:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <c:StringLengthToInvisibilityConverter x:Key="StringLengthToInvisibilityConverter" />
        <c:UserComboBoxElementToLocalizedStringConverter x:Key="UserComboBoxElementToLocalizedStringConverter">
            <c:UserComboBoxElementToLocalizedStringConverter.LocalizedString>
                <helpers:LocalizedString />
            </c:UserComboBoxElementToLocalizedStringConverter.LocalizedString>
        </c:UserComboBoxElementToLocalizedStringConverter>
    </Page.Resources>

    <Grid>
        <Border 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Opacity="0.8" 
            Background="#dd000000" Margin="0,-10,0,10"
        />

        <Border 
            Background="{StaticResource rdWhiteBrush}" 
            Width="480" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            BorderThickness="4"
            Margin="0,128,8,0"
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Margin="24,12,24,12" Style="{ThemeResource TitleTextBlockStyle}" 
                               Foreground="{StaticResource rdBlackBrush}" 
                               x:Uid="AddOrEditDesktop-AddCaption" Text="Add PC or Server(d)"
                               Visibility="{Binding Path=IsAddingDesktop, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Margin="24,12,24,12" Style="{ThemeResource TitleTextBlockStyle}" 
                               Foreground="{StaticResource rdBlackBrush}" 
                               x:Uid="AddOrEditDesktop-EditCaption" Text="Edit PC or Server(d)"
                               Visibility="{Binding Path=IsAddingDesktop, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                </Grid>

                <Border Grid.Row="1" Height="1" Margin="0" />

                <StackPanel Grid.Row="2" Margin="26,12,26,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="AddOrEditDesktop-PcName-Error"
                                   Text="(*)(d)" Padding="0,0,8,0"
                                   ToolTipService.ToolTip="Invalid characters in host name(d)"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Foreground="{StaticResource rdErrorBrush}"
                                   Visibility="{Binding Path=IsHostValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                   />
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   x:Uid="AddOrEditDesktop-PcName" 
                                   Text="PC Name(d)"/>
                    </StackPanel>
                    <Grid Style="{StaticResource rdEntryFieldGridStyle}" >
                        <TextBlock Margin="4,8" 
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       x:Uid="AddOrEditDesktop-PcNameHint" 
                                       Text="Host name or IP address(d)" 
                                       Foreground="{StaticResource rdGrayBrush}"
                                       Visibility="{Binding ElementName=txtHostEntry, Path=Text, Converter={StaticResource StringLengthToInvisibilityConverter}}" Width="390" />

                        <TextBox Name="txtHostEntry" 
                                     Background="Transparent"
                                     Margin="0,8" 
                                     Text="{Binding Path=Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>
                          
                        </Grid>



                    <TextBlock Style="{ThemeResource BodyTextBlockStyle }" x:Uid="AddOrEditDesktop-Credentials" Text="User name(d)"/>
                    <ComboBox Margin="0,8" 
                              x:Uid="AddOrEditDesktop-Credentials-ComboBox"
                              ItemsSource="{Binding Path=UserOptions}"
                              SelectedIndex="{Binding Path=SelectedUserOptionsIndex, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource UserComboBoxElementToLocalizedStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding Path=IsExpandedView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Button Background="Transparent"
                                VerticalAlignment="Center"
                                Command="{Binding ShowDetailsCommand}"
                                Style="{StaticResource DialogDetailsButtonStyle}"                
                                Content="{StaticResource MoreDetailsIcon}"
                                Margin="-8,8,0,0" />
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   VerticalAlignment="Center"
                                   x:Uid="AddOrEditDesktop-MoreDetailsLabel"
                                   Text="More details (d)"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding Path=IsExpandedView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Background="Transparent"
                                VerticalAlignment="Center"
                                Command="{Binding HideDetailsCommand}"
                                Style="{StaticResource DialogDetailsButtonStyle}"                
                                Content="{StaticResource LessDetailsIcon}"
                                Margin="-8,8,0,0" /> 
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   VerticalAlignment="Center"
                                   x:Uid="AddOrEditDesktop-LessDetailsLabel"
                                   Text="Less details (d)"/>
                    </StackPanel>

                    <StackPanel Visibility="{Binding Path=IsExpandedView, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Background="WhiteSmoke">
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" x:Uid="AddOrEditDesktop-FriendlyName" Text="Friendly name(d)" />
                        <Grid Style="{StaticResource rdEntryFieldGridStyle}" >
                            <TextBlock Margin="4,8" 
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       x:Uid="AddOrEditDesktop-PcFriendlyNameHint" 
                                       Text="Connection friendly name (d)" 
                                       Foreground="{StaticResource rdGrayBrush}"
                                       Visibility="{Binding ElementName=txtFriendlyNameEntry, Path=Text, Converter={StaticResource StringLengthToInvisibilityConverter}}" Width="390" />

                            <TextBox Name="txtFriendlyNameEntry" 
                                     Background="Transparent"
                                     Margin="0,8" 
                                     Text="{Binding Path=FriendlyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>
                        </Grid>

                        <!-- 
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" x:Uid="AddOrEditDesktop-Gateway" Text="Gateway(d)"/>
                        <ComboBox Margin="0,8"
                                      ItemsSource="{Binding Path=GatewayOptions}"
                                      SelectedIndex="{Binding Path=SelectedGatewayOptionsIndex, Mode=TwoWay}" />
                        -->                        

                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" x:Uid="AddOrEditDesktop-Sound" Text="Sound(d)"/>
                        <ComboBox Margin="0,8"                                 
                                SelectedIndex="{Binding Path=AudioMode, Mode=TwoWay}">
                            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-PlayOnThisDevice" Content="Play on this device(d)" />
                            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-PlayOnRemotePc" Content="Play on remote PC(d)" />
                            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-DontPlaySounds" Content="Don't play sounds(d)" />
                        </ComboBox>

                        <CheckBox x:Uid="AddOrEditDesktop-SwapMouseButtons" Content="Swap mouse buttons(d)" Margin="0,8" 
                                  IsChecked="{Binding Path=IsSwapMouseButtons, Mode=TwoWay}" />
                        <CheckBox x:Uid="AddOrEditDesktop-ConnectToAdminSession" Content="Connect to admin session(d)" Margin="0,8" 
                                  IsChecked="{Binding Path=IsUseAdminSession, Mode=TwoWay}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,18,0,0" HorizontalAlignment="Right">
                        <Button x:Uid="Common_Button_SaveItem" Content="Save(d)" 
                                Command="{Binding Path=SaveCommand}" />
                        <Button x:Uid="Common_Button_Cancel" Content="Cancel(d)" 
                                Command="{Binding Path=CancelCommand}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>

</Page>
