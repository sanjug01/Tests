<Page
    x:Class="RdClient.Views.TestsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="CornflowerBlue">
        <SwapChainPanel x:Name="TestSwapChainPanel"/>
        <Grid   
            Background="black"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            ManipulationMode="TranslateX, TranslateInertia"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button Grid.Column="0" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol" 
                    Content="StressTest Connect" 
                    Tapped="StressConnectButton_Tapped"/>
            <Button Grid.Column="2" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol" 
                    Content="StressTest Connect2" 
                    Tapped="StressConnect2Button_Tapped"/>
            <Button Grid.Column="4" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol" 
                    Content="Test 3 ..." />
            <Button Grid.Column="6" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol" 
                    Content="Test Connect" 
                    Tapped="ConnectButton_Tapped"/>
            <Button Grid.Column="8" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol" 
                    Content="Test Disconnect" 
                    Tapped="DisconnectButton_Tapped"/>
            <Button Grid.Column="10" BorderBrush="Transparent" BorderThickness="0" Margin="0" FontFamily="Segoe UI Symbol"
                    Content="Finish tests" 
                    Tapped="FinishTestsButton_Tapped"/>
        </Grid>
    </Grid>
</Page>
