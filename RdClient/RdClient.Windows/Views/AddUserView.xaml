<Page
    x:Class="RdClient.Views.AddUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:vm="using:RdClient.Shared.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:c="using:RdClient.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <vm:AddUserViewModel x:Key="AddUserViewModel" x:Name="AddUserViewModel"/>
        <c:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <c:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <c:StringLengthToInvisibilityConverter x:Key="StringLengthToInvisibilityConverter" />
    </Page.Resources>

    <Grid DataContext="{Binding Source={StaticResource AddUserViewModel}}">
        <Border 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Opacity="0.8" 
            Background="#dd000000" Margin="0,-10,0,10"
        />

        <Border 
            Background="{StaticResource rdWhiteBrush}" 
            Width="480" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            BorderThickness="4"
            Margin="0,128,8,0"
            >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Margin="24,12,24,12" Style="{ThemeResource TitleTextBlockStyle}" 
                               Foreground="{StaticResource rdBlackBrush}" 
                               x:Uid="AddUser-AddCaption" Text="Enter Credentials (d)"/>
                </Grid>

                <Border Grid.Row="1" Height="1" Margin="0" />

                <StackPanel Grid.Row="2" Margin="26,12,26,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="AddUser-Username-Error"
                                   Text="(*)" Padding="0,0,8,0"
                                   ToolTipService.ToolTip="Invalid characters in user name(d)"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Foreground="{StaticResource rdErrorBrush}"
                                   Visibility="{Binding Path=IsUsernameValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                   />
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   x:Uid="AddUSer-User" 
                                   Text="User (d)"/>
                    </StackPanel>
                    <Grid Style="{StaticResource rdEntryFieldGridStyle}" >
                        <TextBlock Margin="4,8" 
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       x:Uid="AddUser-UserHint" 
                                       Text="Username" 
                                       Foreground="{StaticResource rdGrayBrush}"
                                       Visibility="{Binding ElementName=txtUser, Path=Text, Converter={StaticResource StringLengthToInvisibilityConverter}}" Width="390" />

                        <TextBox Name="txtUser" 
                                     Background="Transparent"
                                     Margin="0,8" 
                                     Text="{Binding Path=User, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    </Grid>

                    <TextBlock Style="{ThemeResource BodyTextBlockStyle }" x:Uid="AddUser-Password" Text="Password (d)"/>
                    <Grid Style="{StaticResource rdEntryFieldGridStyle}">
                        <TextBlock Margin="4,8" 
                                           Style="{ThemeResource BodyTextBlockStyle}"
                                           x:Uid="AddUser-PasswordHint" 
                                           Text="Password" 
                                           Foreground="{StaticResource rdGrayBrush}"
                                           Visibility="{Binding ElementName=txtPassword, Path=Password, Converter={StaticResource StringLengthToInvisibilityConverter}}" Width="390" />

                        <PasswordBox Name="txtPassword" 
                                         Background="Transparent"
                                         Margin="0,8" 
                                         Password="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <CheckBox 
                        Name="chkStoreCredentials"
                        Content="Store Credentials (d)" VerticalAlignment="Stretch"
                        IsChecked="{Binding Path=StoreCredentials, Mode=TwoWay}"
                        Visibility="{Binding Path=ShowSave, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,18,0,0" HorizontalAlignment="Right">
                        <Button x:Uid="AddUser-Ok" Content="Ok (d)" 
                                Command="{Binding Path=OkCommand}" />
                        <Button x:Uid="AddUser-Cancel" Content="Cancel (d)" 
                                Command="{Binding Path=CancelCommand}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>
