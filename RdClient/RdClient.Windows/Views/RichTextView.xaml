<controls:ModalUserControl
    x:Class="RdClient.Views.RichTextView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:RdClient.Shared.ViewModels"
    xmlns:controls="using:RdClient.Controls"
    xmlns:helpers="using:RdClient.Shared.Helpers"   
    xmlns:cv="using:RdClient.Shared.Converters"    
    TabNavigation="Cycle"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400">
  
    <controls:ModalUserControl.DataContext>
        <vm:RichTextViewModel/>
    </controls:ModalUserControl.DataContext>

    <controls:ModalUserControl.Resources>
        <cv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <cv:TypeToLocalizedStringConverter x:Key="TypeToLocalizedStringConverter">
            <cv:TypeToLocalizedStringConverter.LocalizedString>
                <helpers:LocalizedString />
            </cv:TypeToLocalizedStringConverter.LocalizedString>            
        </cv:TypeToLocalizedStringConverter>
    </controls:ModalUserControl.Resources>

    <ContentControl Style="{StaticResource AccessoryViewStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Document title, should be localized -->
            <TextBlock x:Uid="RichTextView_Title"
                       Grid.Row="0"
                       Style="{ThemeResource SubtitleTextBlockStyle}"                        
                       Text="{Binding DocumentType, Converter={StaticResource TypeToLocalizedStringConverter}}" />
            <HyperlinkButton
                Grid.Row="0"
                Command="{Binding Close}" VerticalAlignment="Bottom" HorizontalAlignment="Right">
				<TextBlock x:Uid="Common_Close" Text="(d) Close"/>
            </HyperlinkButton>            

            <TextBlock Grid.Row="1"
                       x:Uid="RichTextView_Loading"
                       Style="{ThemeResource BodyTextBlockStyle}"                        
                       Text="(d) Loading..." 
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <ProgressBar Margin="0,15"
                         Grid.Row="1"
                         IsIndeterminate="True"
                         HorizontalAlignment="Stretch" 
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <controls:RichTextControl
                Grid.Row="1"
                Margin="0,10,0,0"
                RtfDocument="{Binding Document, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
        </Grid>
    </ContentControl>
</controls:ModalUserControl>
