<Page
    x:Class="RdClient.Views.SessionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:controls="using:RdClient.Controls"
    xmlns:vm="using:RdClient.Shared.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    >
    
    <Page.DataContext>
        <vm:SessionViewModel>
            <vm:SessionViewModel.MouseViewModel>
                <vm:MouseViewModel/>
            </vm:SessionViewModel.MouseViewModel>
        </vm:SessionViewModel>
    </Page.DataContext>

    <Grid Background="green">
        <SwapChainPanel x:Name="SwapChainPanel"/>

        <controls:MouseLayerControl x:Name="MouseLayer" 
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    MousePointer="{Binding MouseViewModel.MousePointer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    MousePointerShape="{Binding MouseViewModel.MousePointerShape}"/>



        <Button
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right" Command="{Binding DisconnectCommand}">Disconnect</Button>
    </Grid>
</Page>
