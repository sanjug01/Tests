<UserControl
    x:Class="RdClient.Controls.ExtendedCredentialControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:RdClient.Controls"
    xmlns:convert="using:RdClient.Converters"
    xmlns:design="using:RdClient.DesignTime"
    mc:Ignorable="d"
    d:DesignHeight="135"
    d:DesignWidth="428">

    <d:UserControl.DataContext>
        <design:FakeCredentialViewModel />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <convert:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{StaticResource SettingsBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <local:CredentialControl />
        </Grid>
        <Grid Grid.Row="1" Height="87">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="{StaticResource SettingsItemHeight}" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="118" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="18" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Style="{StaticResource SettingsDeleteUserButtonStyle}" HorizontalAlignment="Left" Command="{Binding DeleteCommand}" x:Uid="Common_Button_DeleteItem" Content="Delete (d)" />
                <Button Grid.Column="2" Style="{StaticResource SettingsEditUserButtonStyle}" HorizontalAlignment="Right" Command="{Binding EditCommand}" x:Uid="Common_Button_EditItem" Content="Edit (d)" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
