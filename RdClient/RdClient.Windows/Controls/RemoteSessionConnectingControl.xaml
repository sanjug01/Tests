<UserControl
    x:Class="RdClient.Controls.RemoteSessionConnectingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    TabNavigation="Cycle"
    mc:Ignorable="d"
    d:DesignWidth="480"
    d:DesignHeight="200">
    
    <Grid HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Center"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       x:Uid="Connection_Pending_Message"
                       Text="(d) Preparing your connection…"/>
            
            <ProgressBar Margin="0,15"
                         IsIndeterminate="True"
                         HorizontalAlignment="Stretch" />

            <Button Style="{ThemeResource DialogButtonStyle}"
                    x:Name="CancelButton"
                    x:Uid="Common_Button_Cancel"
                    Content="(d) Cancel"
                    HorizontalAlignment="Center"
                    Command="{Binding Cancel}"/>
        </StackPanel>
    </Grid>
</UserControl>
