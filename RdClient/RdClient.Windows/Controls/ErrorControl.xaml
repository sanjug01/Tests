<UserControl
    x:Class="RdClient.Controls.ErrorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:RdClient.Controls"
    xmlns:c="using:RdClient.Converters"
    xmlns:sc="using:RdClient.Shared.Converters"
    xmlns:helpers="using:RdClient.Shared.Helpers"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <c:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <sc:TypeToLocalizedStringConverter x:Key="TypeToLocalizedStringConverter" >
            <sc:TypeToLocalizedStringConverter.LocalizedString>
                <helpers:LocalizedString />
            </sc:TypeToLocalizedStringConverter.LocalizedString>
        </sc:TypeToLocalizedStringConverter>
    </UserControl.Resources>

    <StackPanel>
        <Grid>
            <ContentPresenter x:Name="ContentPresenter" />
            <Border BorderBrush="{ThemeResource rdErrorBrush}" BorderThickness="2" Visibility="{Binding Path=State.IsValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
        </Grid>
        <TextBlock 
            Foreground="{ThemeResource rdErrorBrush}"
            TextTrimming="CharacterEllipsis"
            Text="{Binding Path=State.ErrorContent, FallbackValue='Please enter a valid value (d)', Converter={StaticResource TypeToLocalizedStringConverter}}"
            Visibility="{Binding Path=State.IsValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}">            
        </TextBlock>
    </StackPanel>

</UserControl>
