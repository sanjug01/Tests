<UserControl
    x:Class="RdClient.Controls.RightSideBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>

        <!-- Right hand side bar -->
        <Grid x:Name="RightSideBar" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="{ThemeResource SystemControlBackgroundAltHighBrush}" Opacity="{ThemeResource ConnectionOverlayOpacity}" Visibility="Collapsed">
            <Grid.Resources>
                <Storyboard x:Name="ShowRightSideBarStoryboard">
                    <DoubleAnimation x:Name="ShowRightSideBarAnimation"
                                     Storyboard.TargetName="RightSideBarTransform"
                                     Storyboard.TargetProperty="X"
                                     Duration="0:0:0.1"/>
                </Storyboard>
                <Storyboard x:Name="HideRightSideBarStoryboard">
                    <DoubleAnimation x:Name="HideRightSideBarAnimation"
                                     Storyboard.TargetName="RightSideBarTransform"
                                     Storyboard.TargetProperty="X"
                                     Duration="0:0:0.1"/>
                </Storyboard>
            </Grid.Resources>

            <Grid.RenderTransform>
                <TranslateTransform x:Name="RightSideBarTransform" X="0"/>
            </Grid.RenderTransform>

            <StackPanel Orientation="Vertical" Margin="12,20">
				<Button
					x:Name="NavigateHomeButton" 
					Width="80"
					Background="Transparent">
					<StackPanel Orientation="Vertical">
						<Image							
							HorizontalAlignment="Center"
							Width="40"
							Height="40"
							Source="ms-appx:///Assets/disconnect_icon.png"
							Stretch="UniformToFill">
						</Image>
						<TextBlock
							HorizontalAlignment="Center"
							Style="{StaticResource CaptionTextBlockStyle}"
							TextWrapping="Wrap"
							Text="Disconnect (d)">							
						</TextBlock>
					</StackPanel>
				</Button>
				<Button
					x:Name="FullScreenButton"
					Width="80"
					Background="Transparent">
					<StackPanel Orientation="Vertical">
						<Image 
							HorizontalAlignment="Center"
							Width="40"
							Height="40"							
							Source="ms-appx:///Assets/fullscreen_icon.png"
							Stretch="UniformToFill">
						</Image>
						<TextBlock
							HorizontalAlignment="Center"
							Style="{StaticResource CaptionTextBlockStyle}"
							TextWrapping="Wrap"
							Text="Toggle Full-Screen (d)">
						</TextBlock>
					</StackPanel>
				</Button>
				<ToggleButton
					x:Name="MouseModeButton"
					Width="80"
					Background="Transparent">
					<StackPanel Orientation="Vertical">
						<Image 
							HorizontalAlignment="Center"
							Width="40"
							Height="40"							
							Source="ms-appx:///Assets/touch_icon.png"
							Stretch="UniformToFill">
						</Image>
						<TextBlock
							HorizontalAlignment="Center"
							Style="{StaticResource CaptionTextBlockStyle}"
							TextWrapping="Wrap"
							Text="Mouse-Mode (d)">
						</TextBlock>
					</StackPanel>
				</ToggleButton>
				<AppBarButton Icon="Cancel"  x:Uid="SessionView-HomeButton" Label="Home (d)" />
                <AppBarButton Icon="FullScreen" x:Uid="SessionView-FullScreenButton" Label="Toggle Full-Screen (d)" />
                <AppBarToggleButton Icon="TouchPointer" x:Uid="SessionView-MouseMode" Label="Mouse-Mode (d)" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
