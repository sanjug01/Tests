<UserControl
    x:Class="RdClient.Controls.DesktopExtraSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:RdClient.Controls"
    xmlns:design="using:RdClient.DesignTime"    
    xmlns:converters="using:RdClient.Converters"
    xmlns:helpers="using:RdClient.Shared.Helpers"    
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="700">

    
    <UserControl.Resources>
        <converters:StringLengthToInvisibilityConverter x:Key="StringLengthToInvisibilityConverter" />
        <converters:GatewayComboBoxElementToLocalizedStringConverter x:Key="GatewayComboBoxElementToLocalizedStringConverter">
            <converters:GatewayComboBoxElementToLocalizedStringConverter.LocalizedString>
                <helpers:LocalizedString />
            </converters:GatewayComboBoxElementToLocalizedStringConverter.LocalizedString>
        </converters:GatewayComboBoxElementToLocalizedStringConverter>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" x:Uid="AddOrEditDesktop-FriendlyName" Text="Friendly name(d)" />
        <Grid Style="{StaticResource rdEntryFieldGridStyle}">
            <TextBox Name="txtFriendlyNameEntry"
                     x:Uid="AddOrEditDesktop-PcFriendlyNameTextbox"
                     Background="Transparent"
                     Margin="0,8" 
                     PlaceholderText="Connection friendly name (d)"           
                     Text="{Binding Path=FriendlyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </TextBox>
        </Grid>
        
        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                   x:Uid="AddOrEditDesktop-Gateway" 
                   Text="Gateway(d)"/>
        <ComboBox Margin="0,8" 
                              x:Uid="AddOrEditDesktop-Gateways-ComboBox"
                              ItemsSource="{Binding Path=GatewayOptions}"
                              SelectedIndex="{Binding Path=SelectedGatewayOptionsIndex, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource GatewayComboBoxElementToLocalizedStringConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" x:Uid="AddOrEditDesktop-Sound" Text="Sound(d)"/>
        <ComboBox Margin="0,8"                                 
                                SelectedIndex="{Binding Path=AudioMode, Mode=TwoWay}">
            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-PlayOnThisDevice" Content="Play on this device(d)" />
            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-PlayOnRemotePc" Content="Play on remote PC(d)" />
            <ComboBoxItem x:Uid="AddOrEditDesktop-Sound-DontPlaySounds" Content="Don't play sounds(d)" />
        </ComboBox>

        <CheckBox x:Uid="AddOrEditDesktop-SwapMouseButtons" Content="Swap mouse buttons(d)" Margin="0,8" 
                                  IsChecked="{Binding Path=IsSwapMouseButtons, Mode=TwoWay}" />
        <CheckBox x:Uid="AddOrEditDesktop-ConnectToAdminSession" Content="Connect to admin session(d)" Margin="0,8" 
                                  IsChecked="{Binding Path=IsUseAdminSession, Mode=TwoWay}" />
    </StackPanel>
</UserControl>
