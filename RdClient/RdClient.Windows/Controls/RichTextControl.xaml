<UserControl
    x:Class="RdClient.Controls.RichTextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="1024"
    RequestedTheme="Dark">
    
    <Grid Background="{ThemeResource ConnectionCenterScrollViewBackgroundBrush}">
        <RichEditBox x:Uid="RichTextView_InfoBox"
                     x:Name="InfoBox"
                     PlaceholderText="(d) Loading document ....." 
                     IsTabStop="False"
                     IsReadOnly="True"
                     IsSpellCheckEnabled="False"
                     IsTapEnabled="False"
                     IsDoubleTapEnabled="False"
                     IsRightTapEnabled="False"
                     PreventKeyboardDisplayOnProgrammaticFocus="True"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     Height="Auto"
                     >
            
        </RichEditBox>
    </Grid>
</UserControl>
