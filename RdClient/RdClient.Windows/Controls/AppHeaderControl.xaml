<UserControl
    x:Class="RdClient.Controls.AppHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RdClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="{StaticResource AppHeaderHeight}"
    d:DesignWidth="1024">

    <Grid Background="{StaticResource AppHeaderBackgroundBrush}" Height="{StaticResource AppHeaderHeight}" RequestedTheme="Dark">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource ConnectionCenterMargin}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="BackButton" x:FieldModifier="public" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource BackButtonStyle}" Command="{Binding GoBackCommand}" />
        <TextBlock Grid.Column="1" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center" x:Uid="ConnectionCenter_TitleHeader" Text="Remote Desktop (d)" />
    </Grid>
</UserControl>
